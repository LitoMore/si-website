{
	"tasks": {
		"dev": "deno run -A --node-modules-dir npm:vite",
		"build": "deno run -A --node-modules-dir npm:vite build",
		"deps": "VITE_ENABLE_VISUALIZER=true deno task build",
		"pages": "VITE_BASE_URL='si-website' deno task build",
		"preview": "deno run -A --node-modules-dir npm:vite preview",
		"serve": "deno run --allow-net --allow-read jsr:@std/http@1/file-server dist/",
		"deploy": "touch package.json && gh-pages -d dist && rm package.json",
		"test": "deno fmt --check && deno lint && deno check src *.ts"
	},
	"fmt": {
		"useTabs": true
	},
	"compilerOptions": {
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"jsxImportSourceTypes": "@types/react"
	},
	"imports": {
		"#atom": "./src/atom.ts",
		"#components": "./src/components/index.ts",
		"#constants": "./src/constants.ts",
		"#context": "./src/context.tsx",
		"#hooks": "./src/hooks.ts",
		"#i18n": "./src/i18n/_index.ts",
		"#types": "./src/types.ts",
		"#utils": "./src/utils.ts",
		"#utilsx": "./src/utilsx.tsx",
		"@ant-design/icons": "npm:@ant-design/icons@^5.6.1",
		"@ant-design/v5-patch-for-react-19": "npm:@ant-design/v5-patch-for-react-19@^1.0.3",
		"@deno/vite-plugin": "npm:@deno/vite-plugin@^1.0.4",
		"@swc/plugin-styled-components": "npm:@swc/plugin-styled-components@^6.7.0",
		"@testing-library/dom": "npm:@testing-library/dom@^10.4.0",
		"@testing-library/react": "npm:@testing-library/react@^16.2.0",
		"@types/blob-stream": "npm:@types/blob-stream@^0.1.33",
		"@types/pdfkit": "npm:@types/pdfkit@^0.13.9",
		"@types/react": "npm:@types/react@^19.0.10",
		"@types/react-dom": "npm:@types/react-dom@^19.0.4",
		"@types/react-virtualized": "npm:@types/react-virtualized@^9.22.0",
		"@uidotdev/usehooks": "npm:@uidotdev/usehooks@^2.4.1",
		"@vitejs/plugin-react": "npm:@vitejs/plugin-react@^4.3.4",
		"@vitejs/plugin-react-swc": "npm:@vitejs/plugin-react-swc@^3.8.0",
		"@vitest/browser": "npm:@vitest/browser@^3.0.6",
		"antd": "npm:antd@^5.24.1",
		"copy-text-to-clipboard": "npm:copy-text-to-clipboard@^3.2.0",
		"css-color-converter": "npm:css-color-converter@^2.0.0",
		"es-toolkit": "npm:es-toolkit@^1.32.0",
		"fast-fuzzy": "npm:fast-fuzzy@^1.12.0",
		"get-relative-luminance": "npm:get-relative-luminance@2.0.0-0",
		"jotai": "npm:jotai@^2.12.1",
		"jspdf": "npm:jspdf@^2.5.2",
		"konva": "npm:konva@^9.3.18",
		"playwright": "npm:playwright@^1.50.1",
		"react": "npm:react@^19.0.0",
		"react-dom": "npm:react-dom@^19.0.0",
		"react-draggable": "npm:react-draggable@^4.4.6",
		"react-konva": "npm:react-konva@^19.0.3",
		"react-router": "npm:react-router@^7.2.0",
		"react-virtualized": "npm:react-virtualized@^9.22.6",
		"react-virtuoso": "npm:react-virtuoso@^4.12.5",
		"rollup-plugin-visualizer": "npm:rollup-plugin-visualizer@^5.14.0",
		"simple-icons": "npm:simple-icons@^14.7.0",
		"styled-components": "npm:styled-components@^6.1.15",
		"svg2pdf.js": "npm:svg2pdf.js@^2.3.0",
		"tlds": "npm:tlds@^1.255.0",
		"use-image": "npm:use-image@^1.1.1",
		"vite": "npm:vite@^6.1.0",
		"vitest": "npm:vitest@^3.0.6",
		"vitest-browser-react": "npm:vitest-browser-react@^0.1.1"
	},
	"nodeModulesDir": "auto"
}
