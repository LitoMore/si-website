{
	"tasks": {
		"dev": "deno run -A --node-modules-dir npm:vite",
		"build": "deno run -A --node-modules-dir npm:vite build",
		"deps": "VITE_ENABLE_VISUALIZER=true deno task build",
		"pages": "VITE_BASE_URL='si-website' deno task build",
		"preview": "deno run -A --node-modules-dir npm:vite preview",
		"serve": "deno run --allow-net --allow-read jsr:@std/http@1/file-server dist/",
		"deploy": "touch package.json && gh-pages -d dist && rm package.json",
		"test": "deno fmt --check && deno lint && deno check src *.ts"
	},
	"fmt": {
		"useTabs": true
	},
	"compilerOptions": {
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"jsxImportSourceTypes": "@types/react"
	},
	"imports": {
		"#atom": "./src/atom.ts",
		"#data": "./src/data/index.ts",
		"#components": "./src/components/index.ts",
		"#constants": "./src/constants.ts",
		"#context": "./src/context.tsx",
		"#hooks": "./src/hooks.ts",
		"#i18n": "./src/i18n/_index.ts",
		"#types": "./src/types.ts",
		"#utils": "./src/utils.ts",
		"@ant-design/v5-patch-for-react-19": "npm:@ant-design/v5-patch-for-react-19@^1.0.3",
		"@deno/vite-plugin": "npm:@deno/vite-plugin@^1.0.4",
		"@swc/plugin-styled-components": "npm:@swc/plugin-styled-components@^7.1.5",
		"@tabler/icons-react": "npm:@tabler/icons-react@^3.34.0",
		"@types/react": "npm:@types/react@^19.1.6",
		"@types/react-dom": "npm:@types/react-dom@^19.1.5",
		"@types/react-virtualized": "npm:@types/react-virtualized@^9.22.2",
		"@uidotdev/usehooks": "npm:@uidotdev/usehooks@^2.4.1",
		"@virtuoso.dev/masonry": "npm:@virtuoso.dev/masonry@^1.3.3",
		"@vitejs/plugin-react": "npm:@vitejs/plugin-react@^4.5.1",
		"@vitejs/plugin-react-swc": "npm:@vitejs/plugin-react-swc@^3.10.1",
		"antd": "npm:antd@^5.25.4",
		"color-string": "npm:color-string@^2.0.1",
		"copy-text-to-clipboard": "npm:copy-text-to-clipboard@^3.2.0",
		"es-toolkit": "npm:es-toolkit@^1.38.0",
		"fast-fuzzy": "npm:fast-fuzzy@^1.12.0",
		"get-relative-luminance": "npm:get-relative-luminance@2.0.0-0",
		"jotai": "npm:jotai@^2.12.5",
		"jspdf": "npm:jspdf@^3.0.1",
		"konva": "npm:konva@^9.3.20",
		"react": "npm:react@^19.1.0",
		"react-dom": "npm:react-dom@^19.1.0",
		"react-draggable": "npm:react-draggable@^4.4.6",
		"react-konva": "npm:react-konva@^19.0.4",
		"react-router": "npm:react-router@^7.6.1",
		"react-virtualized": "npm:react-virtualized@^9.22.6",
		"react-virtuoso": "npm:react-virtuoso@^4.12.8",
		"rollup-plugin-visualizer": "npm:rollup-plugin-visualizer@^6.0.1",
		"simple-icons": "npm:simple-icons@^15.0.0",
		"styled-components": "npm:styled-components@^6.1.18",
		"svg2pdf.js": "npm:svg2pdf.js@^2.5.0",
		"tlds": "npm:tlds@^1.259.0",
		"use-image": "npm:use-image@^1.1.4",
		"vite": "npm:vite@^6.3.5"
	},
	"nodeModulesDir": "auto"
}
